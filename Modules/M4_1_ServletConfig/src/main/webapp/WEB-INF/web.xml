<?xml version="1.0" encoding="UTF-8"?>

<!-- 
	1. Write a Java program to fetch data from web.xml to Servlet using ServletConfig. 
	2. Write a Java program to fetch data from web.xml to Servlet using ServletCotext. -->




<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
  <display-name>M4_1_ServletConfig</display-name>
  <welcome-file-list>
    
    <welcome-file>index.jsp</welcome-file>
   
  </welcome-file-list>
  
  
  <context-param>
    <param-name>driver</param-name>
    <param-value>kinjal savaliya</param-value>
  </context-param>
  <servlet>
    <servlet-name>s1</servlet-name>
    <servlet-class>com.Servlet1</servlet-class>
    <init-param>
      <param-name>path</param-name>
      <param-value>C://documents//</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>s1</servlet-name>
    <url-pattern>/ser1</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>s2</servlet-name>
    <servlet-class>com.Servlet2</servlet-class>
    <init-param>
      <param-name>path</param-name>
      <param-value>D://documents//</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>s2</servlet-name>
    <url-pattern>/ser2</url-pattern>
  </servlet-mapping>
</web-app>